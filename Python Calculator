print("Welcome to basic arithmetic operations")
a=int(input("Enter the 1st value:"))
b=int(input("Enter the 2 nd value:"))
print("1.add \n 2.subtraction \n 3.multiplication \n 4.division")
num=int(input("Enter the choice:"))
if(num==1):
  print(a+b)
elif(num==2):
  print(a-b)
elif(num==3):
  print(a*b)
elif(num==4):
  print(a/b)
else:
  print("Enter valid choice")
  
